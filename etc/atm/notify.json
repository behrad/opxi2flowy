[
    {
        "$class": "atm_event",
        "$method": "is_good",
        "eventId": "{$job.data.id}",
        "$set": "failure_fixed",
        "$empty": "failure_not_fixed"
    },
    {
        "if": "{$failure_not_fixed}",
        "$class": "atm_event",
        "$method": "update",
        "eventId": "{$job.data.id}",
        "notify_job_id": "{$job.id}",
        "estate":"started",
        "status": "alarm started"
    },
    {
        "if": "{$failure_not_fixed}",
        "$class": "job",
        "$method": "progress",
        "job": "{$job}",
        "level": "{$job.current_attempt}",
        "of": "{$job._max_attempts}"
    },
    {
        "if": "{$failure_not_fixed}",
        "$class": "job",
        "$method": "progress",
        "inc": true,
        "job_id": "{$job.data.parent_job_id}",
        "level": "{$job.current_attempt}",
        "of": "{$job._max_attempts}"
    },
    {
        "if": "{$failure_not_fixed}",
        "$class": "job",
        "name": "atm_failure_alarm",
        "blocking": true,
        "data": "{$job.data}",
        "$priority": "{$job._priority}",
        "$set": "alarm",
        "$empty": "alarm_failed"
    },
    {
        "if": "{$alarm}",
        "$class": "job",
        "$method": "log",
        "job": "{$job}",
        "format": "Alarm finished %s",
        "args": [ "{$alarm}" ]
    },
    {
        "if": "{$alarm.error}",
        "$class": "atm_event",
        "$method": "update",
        "eventId":"{$job.data.id}",
        "status":"{$alarm.message}"
    },
    {
        "if": "{$alarm.timeout}",
        "$class": "atm_event",
        "$method": "update",
        "eventId":"{$job.data.id}",
        "status":"alarm not answered"
    },
    {
        "if": "{$alarm_failed}",
        "$class": "atm_event",
        "$method": "update",
        "eventId": "{$job.data.id}",
        "status": "Alarm failed"
    },
    {
        "if": "{$alarm.answered}",
        "$class": "atm_event",
        "$method": "update",
        "eventId": "{$job.data.id}",
        "status": "alarm answered, waiting for fix"
    },
    {
        "if": "{$alarm}",
        "$class": "atm_event",
        "id": "{$job.data.id}",
        "$set": "failure"
    },
    {
        "$class": "atm_event",
        "$method": "is_good",
        "event": "{$failure}",
        "$set": "fixed",
        "$empty": "not_fixed"
    },
    {
        "if": [ "{$not_fixed}" ],
        "$class": "atm_event",
        "$method": "remaining_alarm_retries",
        "failure": "{$failure}",
        "current_job_data": "{$job.data}",
        "$set": "retries",
        "$empty": "no_retries"
    },
    {
        "if": [ "{$retries}" ],
        "$class": "job",
        "name": "atm_failure_notify",
        "title": "{$failure.alarm.title.trans.fa}",
        "delay": "{$failure.alarm.between_try_delay}",
        "$priority": "{$failure.alarm.priority}",
        "data": "{$job.data}"
    },
    {
        "if": [ "{$no_retries}", "{$job.last_attempt}" ],
        "$class": "atm_event",
        "$method": "update",
        "eventId": "{$job.data.id}",
        "estate": "wait_for_fix",
        "status": "alarm task finished"
    },

    {
        "if": [ "{$no_retries}", "{$job.last_attempt}" ],
        "$class": "job",
        "name": "atm_failure_post_notify",
        "delay": "{$job.data.alarm.last_try_delay}",
        "data": "{$job.data}"
    }
]