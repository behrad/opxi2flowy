[
    {
        "$class": "redis",
        "$method": "getHash",
        "key": "{$message}",
        "$set": "campaignHash"
    },
    {
        "if": "{$campaignHash}",
        "$class": "redis",
        "$method": "set",
        "key": "{$campaignHash.sends}",
        "value": 0
    },
    {
        "if": "{$campaignHash}",
        "$class": "redis",
        "$method": "set",
        "key": "{$campaignHash.successes}",
        "value": 0
    },
    {
        "$class": "message",
        "$method": "as_campaign",
        "data": "{$campaignHash}",
        "$set": "campaign"
    },
    {
        "$class": "couch",
        "doc": "{$campaign}",
        "$set": "logResp"
    },
    {
        "if": "{$logResp}",
        "$class": "job",
        "blocking": true,
        "name": "authorize-msg",
        "data": "{$campaign}",
        "$set": "auth",
        "$empty": "auth_error"
    },
    {
        "if": "{$auth_error}",
        "$function": "console.print",
        "$args": [ "Authorization Error ", "{$auth_error}" ]
    },
    {
        "if": "{$auth_error}",
        "$class": "redis",
        "$method": "setValue",
        "key": "{$message}",
        "property": "status",
        "value": "auth_error"
    },
    {
        "if": "{$auth_error}",
        "$class": "redis",
        "$method": "publish",
        "channel": "opxi2.campaign.change.{$message}",
        "message": "{$message}"
    },
    {
        "if": "{$auth.success}",
        "$class": "job",
        "name": "campaign-run",
        "data": "{$message}",
        "$set": "job_id"
    },
    {
        "if": "{$job_id}",
        "$class": "redis",
        "$method": "setValue",
        "key": "{$message}",
        "property": "job_id",
        "value": "{$job_id}"
    },
    {
        "if": "{$auth.success}",
        "$class": "redis",
        "$method": "setValue",
        "key": "{$message}",
        "property": "status",
        "value": "queued"
    },
    {
        "if": "{$auth.success}",
        "$class": "redis",
        "$method": "publish",
        "channel": "opxi2.campaign.change.{$message}",
        "message": "{$message}"
    },
    {
        "if": "{$auth.failed}",
        "$class": "redis",
        "$method": "setValue",
        "key": "{$message}",
        "property": "status",
        "value": "not_authorized"
    },
    {
        "if": "{$auth.failed}",
        "$class": "redis",
        "$method": "publish",
        "channel": "opxi2.campaign.change.{$message}",
        "message": "{$message}"
    }
]