[
    {
        "$function":"match",
        "$origin":"{$name}",
        "$args": [ "^[^-]+" ],
        "$set": "matched"
    },
    {
        "if": "{$matched}",
        "$function":"shift",
        "$origin":"{$matched}",
        "$set": "msg_channel"
    },
    {
        "$class": "message",
        "$method": "as_log",
        "action": "delivery-report",
        "data": "{$job.data}",
        "$set": "delivery_log"
    },
    {
        "if": "{$delivery_log}",
        "$class": "couch",
        "$method": "update",
        "retries": 2,
        "id": "{$job.data.id}",
        "data": "{$delivery_log}"
    },
    {
        "$function":"toLowerCase",
        "$origin":"{$job.data.status}",
        "$set":"status"
    },
    {
        "$function":"join",
        "$origin":[ "opxi2.outbound.", "{$msg_channel}", ".delivery.", "{$job.data.id}", ".", "{$status}" ],
        "$args":[""],
        "$set":"publish_channel"
    },
    {
        "$class": "redis",
        "$method": "publish",
        "channel": "{$publish_channel}",
        "message": "{$job.data.id}"
    }
]