[
    {
        "$class": "message",
        "$method": "as_multi_dest",
        "data": "{$job.data}",
        "index": "{$job.current_attempt}",
        "$set": "msg"
    },
    {
        "$class": "job",
        "name": "outbound-msg",
        "blocking": true,
        "data": "{$msg}",
        "$priority": "{$job._priority}",
        "$set": "outbound_job"
    },
    {
        "if": "{$outbound_job}",
        "$class": "job",
        "$method": "progress",
        "job": "{$job}",
        "level": "{$job.current_attempt}",
        "of": "{$job._max_attempts}"
    },
    {
        "if": "{$outbound_job}",
        "$class": "job",
        "$method": "log",
        "job": "{$job}",
        "format": "Outbound job %d finished",
        "args": "{$job.current_attempt}"
    },
    {
        "if": "{$outbound_job.ok}",
        "$function":"join",
        "$origin":[ "opxi2.outbound.", "{$msg.channel}", ".delivery.*.delivered" ],
        "$args":[""],
        "$set":"delivery_pattern"
    },
    {
        "if": "{$outbound_job.ok}",
        "$class": "job",
        "$method": "log",
        "job": "{$job}",
        "format": "Waiting %d for response...",
        "args": "{$job.data.answer_timeout}"
    },
    {
        "if": "{$outbound_job.ok}",
        "$class": "redis",
        "$method": "wait_first",
        "pattern": "{$delivery_pattern}",
        "timeout": "{$job.data.answer_timeout}",
        "$set": "dest_response"
    },
    {
        "if": "{$dest_response.timeout}",
        "$class": "util",
        "$method": "clone",
        "from": "{$dest_response}",
        "$set": "resp"
    },
    {
        "if": "{$dest_response.timeout}",
        "$class": "job",
        "$method": "log",
        "job": "{$job}",
        "format": "%s timed out!",
        "args": "{$msg.to}"
    },
    {
        "if": "{$dest_response.message}",
        "$class": "util",
        "$method": "set",
        "name":  ["answered", "to"],
        "value": [true, "{$msg.to}"],
        "$set": "resp"
    },
    {
        "if": "{$dest_response.message}",
        "$class": "job",
        "$method": "log",
        "job": "{$job}",
        "format": "%s answered",
        "args": "{$msg.to}"
    },
    {
        "if": "{$dest_response.message}",
        "$class": "job",
        "$method": "progress",
        "job": "{$job}",
        "level": 100
    },
    {
        "$class": "util",
        "$method": "clone",
        "from": "{$outbound_job}",
        "to": "{$resp}",
        "$set": "log"
    }
]