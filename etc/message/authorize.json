[
    {
        "$class": "message",
        "data": "{$job.data}",
        "$set": "message"
    },
    {
        "$class": "crm",
        "$method": "is_authorized",
        "message": "{$message}",
        "$set": "auth"
    },
    {
        "if": "{$auth.failed}",
        "$function": "console.print",
        "$args": [ "Authorization Failed ", "{$job.data.from}" ]
    },
    {
        "if": "{$auth.failed}",
        "retries": 2,
        "$class": "couch",
        "$method": "update",
        "id": "{$job.data.id}",
        "data": "{$auth.failed}"
    },
    {
        "if": "{$auth.success}",
        "retries": 2,
        "$class": "couch",
        "$method": "update",
        "id": "{$job.data.id}",
        "data": "{$auth.success}"
    }
]