[
    {
        "$class": "sleep",
        "amount": 5000,
        "$set": "next"
    },
    {
        "if": "{$next}",
        "$function": "JSON.parse",
        "$args": "{\"posting\": true }",
        "$set": "sendStatus"
    },
    {
        "$class": "couch",
        "$method": "update",
        "id": "{$job.data._id}",
        "data": "{$sendStatus}",
        "$set": "logResp"
    },
    {
        "if": "{$logResp}",
        "$function": "console.print",
        "$args": [ "Send-Email Log: ", "{$logResp}" ]
    }
]