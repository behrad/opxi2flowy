[
    {
        "$every": "{$job.data.id}",
        "$tasks": [
            {
                "$class": "message",
                "$method": "as_log",
                "action": "posting",
                "data": "{*job.data}",
                "index": "[*every.index]",
                "$set": "posting_log"
            },
            {
                "if": "[*posting_log]",
                "$class": "couch",
                "$method": "update",
                "id": "[*every.item]",
                "data": "[*posting_log]"
            },
            {
                "if": "[*posting_log.posting.ok]",
                "$class": "redis",
                "$method": "publish",
                "channel": "opxi2.outbound.sms.send.[*every.item].sent",
                "message": "[*every.item]"
            }
        ]
    }
]