[
    {
        "$function":"match",
        "$origin":"{$name}",
        "$args": [ "^[^-]+" ],
        "$set": "matched"
    },{
        "if": "{$matched}",
        "$function":"shift",
        "$origin":"{$matched}",
        "$set": "my_channel"
    },
    {
        "$every": "{$job.data.id}",
        "$tasks": [
            {
                "$class": "message",
                "$method": "as_log",
                "action": "posting",
                "data": "{*job.data}",
                "index": "[*every.index]",
                "$set": "posting_log"
            },
            {
                "if": "[*posting_log]",
                "$class": "couch",
                "$method": "update",
                "id": "[*every.item]",
                "data": "[*posting_log]"
            },
            {
                "$function":"join",
                "$origin":[ "opxi2.outbound.", "{*my_channel}", ".send.", "[*every.item]", ".sent" ],
                "$args":[""],
                "$set":"publish_channel"
            },
            {
                "if": "[*posting_log.posting.ok]",
                "$class": "redis",
                "$method": "publish",
                "channel": "[*publish_channel]",
                "message": "[*every.item]"
            }
        ]
    }
]